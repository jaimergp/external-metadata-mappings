{
  "$id": "https://github.com/python/peps/blob/main/peps/pep-0XXX/central-registry.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "Definition": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "description": "PURL-like identifier.",
          "minLength": 1,
          "pattern": "^(dep:).*",
          "title": "Id",
          "type": "string"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Free-form field to add some details about the package. Allows Markdown.",
          "title": "Description"
        },
        "provides": {
          "anyOf": [
            {
              "minLength": 1,
              "pattern": "^(dep:).*",
              "type": "string"
            },
            {
              "items": {
                "minLength": 1,
                "pattern": "^(dep:).*",
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "List of identifiers this entry connects to.\nUseful to annotate aliases or virtual package implementations.\nIf no `provides` info is added, the entry is considered canonical.",
          "title": "Provides"
        },
        "urls": {
          "anyOf": [
            {
              "format": "uri",
              "minLength": 1,
              "type": "string"
            },
            {
              "items": {
                "format": "uri",
                "minLength": 1,
                "type": "string"
              },
              "type": "array"
            },
            {
              "additionalProperties": {
                "format": "uri",
                "minLength": 1,
                "type": "string"
              },
              "propertyNames": {
                "minLength": 1
              },
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Hyperlinks to web locations that provide more information about the definition.",
          "title": "Urls"
        }
      },
      "required": [
        "id"
      ],
      "title": "Definition",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "description": "Canonical list of accepted `dep:(virtual|generic)/` packages",
  "properties": {
    "$schema": {
      "default": "",
      "description": "URL of the definition list schema in use for the document.",
      "title": "$Schema",
      "type": "string"
    },
    "schema_version": {
      "default": 1,
      "exclusiveMaximum": 2,
      "minimum": 1,
      "title": "Schema Version",
      "type": "integer"
    },
    "definitions": {
      "description": "List of PURL definitions currently recognized.",
      "items": {
        "$ref": "#/$defs/Definition"
      },
      "title": "Definitions",
      "type": "array"
    }
  },
  "required": [
    "definitions"
  ],
  "title": "DefinitionListModel",
  "type": "object"
}
